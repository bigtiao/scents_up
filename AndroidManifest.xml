<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scents_up"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AppStart"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="MainActivity"
            android:theme="@style/title" >
        </activity>
        <activity
            android:name="com.example.scents_up.tabs.HomeActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.scents_up.tabs.NewsActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.scents_up.tabs.NewsDetailsActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.scents_up.tabs.MyInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.scents_up.tabs.SearchActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.scents_up.tabs.MoreActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
    </application>

</manifest>